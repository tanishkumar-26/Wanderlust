<% layout("layouts/boilerplate") %> 

<style>
 
.scroll-wrapper {
  position: relative;
  width: 100%;
  overflow: hidden;
  
}
.scroll-row {
  display: flex;
  align-items: center;
  overflow: hidden;
  width: 100%;
  position: relative;
  gap: 10px;
}

.scrollable-horizontal {
  display: flex;
  overflow-x: auto;
  white-space: nowrap;
  scroll-behavior: smooth;
  gap: 20px;
  padding: 10px 0;
  flex: 1; 
  scrollbar-width: none;
}

.scrollable-horizontal::-webkit-scrollbar {
  display: none;
}

.filter {
  flex: 0 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 100px;
  height: 100px;
  background: #f5f5f5;
  border-radius: 10px;
  padding: 10px;
  opacity: 0.7;
  transition: opacity 0.2s;
}
.filter:hover {
  opacity: 1;
  cursor: pointer;
}

.scroll-btn {
  background: white;
  border: none;
  padding: 10px;
  font-size: 18px;
  cursor: pointer;
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
  border-radius: 50%;
}

.tax-toggle {
  display: flex;
  align-items: center;
  padding: 0.2rem 0.8rem;
  font-size: 0.8rem;            
  height: auto;
  border: 1px solid black;
  border-radius: 1rem;
  flex-shrink: 0;
  white-space: nowrap;
}


.tax-toggle .form-check-input {
  width: 30px;
  height: 16px;
  margin-right: 8px;
}


@media (max-width: 576px) {
  .tax-toggle .form-check-label {
    font-size: 0.75rem;
    content: "Tax";
  }
  label {
    display: inline-block;
    width: 2rem;
}

  .tax-toggle .form-check-label::before {
    content: "Tax";
  }

  .tax-toggle .form-check-label {
    visibility: hidden;
    position: relative;
  }

  .tax-toggle .form-check-label::before {
    visibility: visible;
    position: absolute;
    top: 0;
    left: 0;
  }
}



.item {
  display: inline-block;  
  width: 100px;
  height: 100px;
  margin-right: 10px;
  background: lightblue;
  text-align: center;
  line-height: 100px;
}


  #filters {
  display: flex;
  align-items: center;
  overflow-x: auto;
  scroll-behavior: smooth;
  white-space: nowrap;
}

  .filter{
    text-align: center;
       margin: 0rem 0.5rem 0rem 0rem;
    opacity: 0.7;
  }
  .filter:hover{
    opacity: 1;
    cursor: pointer;
  }
  .filter p{
    font-size: 0.8rem;
  }
  .tax-info{
    display: none;
  }
  .tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.5rem;
    padding: 1rem;
   
    display: flex;
    align-items: center;
    
  }

</style>


   
  <div class="scroll-row">
  <button class="scroll-btn left" onclick="scrollLeft()">
    <i class="fa-solid fa-chevron-left"></i>
  </button>

  <div id="filters" class="scrollable-horizontal">
    <div class="filter"><i class="fa-solid fa-fire"></i><p>Trending</p></div>
    <div class="filter"><i class="fa-solid fa-bed"></i><p>Rooms</p></div>
    <div class="filter"><i class="fa-solid fa-mountain-city"></i><p>Iconic Cities</p></div>
    <div class="filter"><i class="fa-solid fa-mountain"></i><p>Mountains</p></div>
    <div class="filter"><i class="fa-brands fa-fort-awesome"></i><p>Castles</p></div>
    <div class="filter"><i class="fa-solid fa-person-swimming"></i><p>Pools</p></div>
    <div class="filter"><i class="fa-solid fa-campground"></i><p>Camping</p></div>
    <div class="filter"><i class="fa-solid fa-tractor"></i><p>Farms</p></div>
    <div class="filter"><i class="fa-solid fa-snowflake"></i><p>Arctic</p></div>
    <div class="filter"><i class="fa-solid fa-igloo"></i><p>Dome</p></div>
  </div>

  <button class="scroll-btn right" onclick="scrollRight()">
    <i class="fa-solid fa-chevron-right"></i>
  </button>

  <!-- TAX TOGGLE IN SAME LINE -->
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
    </div>
  </div>
</div>


<div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 g-4 listing-card mt-3">
  <% for (let listing of listings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card">
            <div class="card listing-card h-100">
                <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image " style='height: 20rem;'
                />
                 <div class="card-img-overlay"></div>
               <div class="card-body">
                <p class="card-text">
                    <b> <%= listing.title %> </b>
                <br>
                    &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
                    <i class="tax-info"> &nbsp; &nbsp; +18% GST</i>
                </p>
                </div>
            </div>
        </div>
    </a>
  <% } %>
</div>

<script>
   function scrollLeft() {
  const container = document.getElementById("filters");
  container.scrollLeft -= 200;
  }

  function scrollRight() {
  const container = document.getElementById("filters");
  container.scrollLeft += 200;
  }

    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        console.log("Switch toggled");
        let taxInfo = document.getElementsByClassName("tax-info");
        for (info of taxInfo) {
            if(info.style.display != "inline") {
                info.style.display = "inline";
            } else {
                info.style.display = "none";
            }
        }
    });
</script>

    

    
